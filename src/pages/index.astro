---
import LinkedinIcon from '../icons/Linkedin.astro';
import GithubIcon from '../icons/Github.astro';
import MailIcon from '../icons/Mail.astro';
import BriefCaseIcon from '../icons/BriefCase.astro';
import CodeIcon from '../icons/Code.astro';
import ProfileIcon from '../icons/ProfileCheck.astro';
import Badge from '../components/Badge.astro';
import SectionContainer from '../components/SectionContainer.astro';
import Layout from '../layouts/Layout.astro';
import SocialPill from '../components/SocialPill.astro';
import Experience from '../components/Experience.astro';
import Projects from '../components/Projects.astro';
import AboutMe from '../components/AboutMe.astro';
---

<Layout	
	title="Portfolio de Bryan - Desarrollador y Programador web"
	description='Contrata a Bryan para crear tu aplicación web. Desarrollador Web. Especializado en crear aplicaciones únicas'
>
	<main>
		<SectionContainer class="w-full lg:w-[800px] mx-auto py-10 gap-5">
			<img class="rounded-full w-[150px] h-[150px]" src="/img/perfil.jpeg" alt="Photo">
			<div class="mt-5">
				<h1 class="text-white text-3xl md:text-5xl font-bold flex gap-4 pb-4">
					Hola, soy Bryan
					<a
						href="https://www.linkedin.com/in/bryanllana/"
						class="flex justify-center items-center"
						target="_blank"
						rel="noopener"
						>
						<Badge>Disponible para trabajar</Badge>
					</a>
				</h1>
				<h2 class="text-xl md:text-2xl opacity-80 text-wrap max-w-[800px]">
					<span class="text-yellow-200/90">Desarrollador web.</span>
					<span class="text-red-200/90">De Lima, Perú.</span>
					Especializado en crear aplicaciones interesantes.
				</h2>
				<nav class="flex gap-2 mt-6 flex-wrap">
					<SocialPill href="https://www.linkedin.com/in/bryanllana/">
						<LinkedinIcon class="w-6 h-6"/>
						Linkedin
					</SocialPill>
					<SocialPill href="https://github.com/BryanLlana">
						<GithubIcon class="w-6 h-6"/>
						GitHub
					</SocialPill>
					<SocialPill href="mailto:bryanllana14@gmail.com">
						<MailIcon />
						bryanllana14@gmail.com
					</SocialPill>
				</nav>
			</div>
		</SectionContainer>

		<!-- <SectionContainer id="experience">
			<h2 class="text-4xl font-semibold mb-5 flex gap-3 items-center">
				<BriefCaseIcon class="size-8" />
				Experiencia Laboral
			</h2>
			<Experience />
		</SectionContainer> -->

		<SectionContainer id="projects">
			<h2 class="text-4xl font-semibold mb-5 flex gap-3 items-center">
				<CodeIcon class="size-8" />
				Proyectos
			</h2>
			<Projects />
		</SectionContainer>

		<SectionContainer id="about">
			<h2 class="text-4xl font-semibold mb-5 flex gap-3 items-center">
				<ProfileIcon class="size-8" />
				Sobre mí
			</h2>
			<AboutMe />
		</SectionContainer>
	</main>
</Layout>
